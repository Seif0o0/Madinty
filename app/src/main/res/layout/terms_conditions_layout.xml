    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.madinaty.app.presentation.viewmodel.CommonInfoViewModel" />

        <variable
            name="retryListener"
            type="com.madinaty.app.presentation.adapter.RetryClickListener" />

        <variable
            name="termsConditionsString"
            type="String" />
    </data>

